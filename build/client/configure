curDir=`cd $(dirname $0) && pwd`
cd ${curDir}

#
# init build environment variables
#
. ./env.sh


#
# set prefix if configured
#
if [ $# -eq 1 ] ;then
    prefix=${1#--prefix=}
    if [ -n "${prefix}" -a ${prefix:0:1} = "/" ] ;then
        INSTALL_HOME=${prefix}
    fi
fi
echo "install home: ${INSTALL_HOME}"

#
# copy source files to temporary build directory
#
test -d ${BUILD_SOURCE_HOME} && rm -rf ${BUILD_SOURCE_HOME}
mkdir -p ${BUILD_SOURCE_HOME}
for codes in ${SOURCE_DIRECTORIES[@]}; do
    echo "copy: ${DRAGONFLY_HOME}/${codes} to ${BUILD_SOURCE_HOME}"
    cp -r ${DRAGONFLY_HOME}/${codes} ${BUILD_SOURCE_HOME}
done

#
# generate ${CONFIGURED_VARIABLES_FILE}
#
echo "#!/usr/bin/env bash"                  >   ${CONFIGURED_VARIABLES_FILE}
echo "INSTALL_HOME=${INSTALL_HOME}"         >>  ${CONFIGURED_VARIABLES_FILE}
chmod +x ${CONFIGURED_VARIABLES_FILE}


